{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "RISC-V QEMU",
      "type": "cppdbg",
      "request": "launch",
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb-multiarch",
      "program": "${workspaceFolder}/build/kernel.elf",
      "cwd": "${workspaceFolder}",
      "miDebuggerServerAddress": "localhost:1234",
      "setupCommands": [
        { "text": "set arch riscv:rv64" },
        { "text": "set pagination off" }
      ]
    }
  ]
}
